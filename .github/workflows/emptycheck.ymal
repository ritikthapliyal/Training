name: Check if Empty

on:
  push:
    branches:
      - main

jobs:
  check-file:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout repository
      uses: actions/checkout@v2
    - name: Check if the file is empty
      run: |
        if [ ! -s "ritik.txt" ]; then
          echo "File is empty"
          exit 1
        else
          echo "File is not empty"
          exit 0
        fi
